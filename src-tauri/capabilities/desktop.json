{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "window-state:default",
    "window-state:default",
    "locale:default",
    "updater:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "/**"
        }
      ]
    }
  ]
}
