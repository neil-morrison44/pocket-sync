{
  "name": "pocket-sync",
  "private": true,
  "version": "5.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint-i18n": "eslint --fix --ext .json --format node_modules/eslint-plugin-i18n-json/formatter.js src/i18n",
    "dead-code": "npx ts-prune"
  },
  "dependencies": {
    "@neil-morrison44/gameboy-emulator": "^1.3.0",
    "@prantlf/jsonlint": "11.7.0",
    "@react-three/drei": "^10.0.5",
    "@react-three/fiber": "^9.1.0",
    "@react-three/postprocessing": "^3.0.4",
    "@tauri-apps/api": "^2.4.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.2.2",
    "@tauri-apps/plugin-dialog": "^2.2.0",
    "@tauri-apps/plugin-fs": "^2.2.0",
    "@tauri-apps/plugin-http": "^2.4.2",
    "@tauri-apps/plugin-log": "^2.3.1",
    "@tauri-apps/plugin-os": "^2.2.1",
    "@tauri-apps/plugin-process": "^2.2.0",
    "@tauri-apps/plugin-shell": "^2.2.0",
    "@tauri-apps/plugin-updater": "^2.6.1",
    "@types/three": "0.175.0",
    "@zip.js/zip.js": "^2.7.59",
    "d3-scale": "^4.0.2",
    "date-fns": "^4.1.0",
    "fast-fuzzy": "^1.12.0",
    "html-react-parser": "^5.2.2",
    "i18next": "^24.2.3",
    "i18next-icu": "^2.3.0",
    "mdast-util-gfm-autolink-literal": "2.0.0",
    "postprocessing": "^6.37.2",
    "r3f-perf": "^7.2.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.4.1",
    "react-markdown": "^10.1.0",
    "recoil": "^0.7.7",
    "remark-gfm": "^4.0.0",
    "simplex-noise": "^4.0.3",
    "three": "0.175.0"
  },
  "devDependencies": {
    "@octokit/rest": "^21.1.1",
    "@tauri-apps/cli": "^2.4.0",
    "@types/d3-scale": "^4.0.9",
    "@types/jsonlint": "^1.6.3",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.23.0",
    "eslint-plugin-i18n-json": "^4.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "postcss-nesting": "^13.0.1",
    "stylelint": "^16.17.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vite-plugin-i18next-loader": "^3.1.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:i18n-json/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "unused-imports",
      "i18n-json"
    ],
    "rules": {
      "react/jsx-no-literals": [
        "error",
        {
          "noStrings": true,
          "ignoreProps": true,
          "allowedStrings": [
            ":",
            "_",
            "X",
            "-"
          ]
        }
      ],
      "i18n-json/valid-message-syntax": [
        2,
        {
          "syntax": "icu"
        }
      ],
      "react/no-unknown-property": [
        "off",
        {
          "ignore": [
            "JSX"
          ]
        }
      ],
      "@typescript-eslint/ban-ts-comment": "warn",
      "unused-imports/no-unused-imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "root": true,
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
